{
    "name": "clockdown",
    "version": "1.0.0",
    "license": "MIT",
    "author": "Clockdown team",
    "description": "Clockdown backend service",
    "scripts": {
        "start": "node app.js",
        "dev:staging": "set NODE_ENV=staging && nodemon -r dotenv/config app.js dotenv_config_path=.env.staging",
        "dev:local": "set NODE_ENV=local && nodemon -r dotenv/config app.js dotenv_config_path=.env.local",
        "db-create": "cd database && npx sequelize-cli db:create",
        "db-drop": "cd database && npx sequelize-cli db:drop",
        "dev:db-migrate": "set NODE_ENV=staging && npx sequelize-cli db:migrate",
        "dev:local:db-migrate": "set NODE_ENV=local && npx sequelize-cli db:migrate",
        "db-migrate": "set NODE_ENV=production&& npx sequelize-cli db:migrate",
        "db-migrate-undo": "set NODE_ENV=production&& npx sequelize-cli db:migrate:undo",
        "db-seeds": "cd database && npx sequelize-cli db:seed:all",
        "dev:db-seeds": "set NODE_ENV=staging && npx sequelize-cli db:seed:all",
        "db-seeds-undo": "cd database && npx sequelize-cli db:seed:undo",
        "format": "prettier --write \"**/*.+(js|json|css|md|mdx|html)\"",
        "lint": "eslint . --ext .js",
        "test": "jest --detectOpenHandles",
        "test:local": "set NODE_ENV=local && set CONTEXT=test && jest --detectOpenHandles --forceExit",
        "test:local:coverage": "set NODE_ENV=local && set CONTEXT=test && jest --coverage --detectOpenHandles"
    },
    "dependencies": {
        "bcrypt": "^5.0.1",
        "body-parser": "^1.19.0",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "dotenv": "^16.0.1",
        "express": "~4.18.1",
        "express-jwt-permissions": "^1.3.6",
        "http-status": "^1.5.3",
        "joi": "^17.6.0",
        "jsonwebtoken": "^8.5.1",
        "moment": "^2.29.1",
        "node-fetch": "^2.6.7",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "pg": "^8.7.3",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.21.2",
        "uuid": "^8.3.2",
        "uuidv4": "^6.2.13"
    },
    "engines": {
        "node": ">=0.10.0"
    },
    "devDependencies": {
        "@types/jest": "^29.0.2",
        "chalk": "^4.1.2",
        "eslint": "^8.23.1",
        "eslint-config-prettier": "^8.5.0",
        "eslint-config-standard": "^17.0.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-n": "^15.2.5",
        "eslint-plugin-promise": "^6.0.1",
        "jest": "^29.0.3",
        "nodemon": "^2.0.18",
        "prettier": "^2.7.1",
        "sequelize-cli": "^6.4.1",
        "supertest": "^6.2.4"
    }
}
